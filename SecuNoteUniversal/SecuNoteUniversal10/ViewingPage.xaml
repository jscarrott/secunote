<Page
    x:Class="SecuNoteUniversal10.ViewingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="txtBlockHeader" Text="SecuNote" FontSize="48" FontWeight="Bold" />
        <RelativePanel x:Name="ContentPanel" RelativePanel.Below="txtBlockHeader" />
        <RelativePanel x:Name="ButtonPanel" RelativePanel.Below="ContentPanel">
            <Button x:Name="BackButton" Content="Back" Click="BackFileButton_Click" />
            <Button x:Name="SaveButton" RelativePanel.RightOf="BackButton" Content="Save" Click="SaveButton_Click"
                    IsEnabled="False" />
        </RelativePanel>

    </RelativePanel>
</Page>